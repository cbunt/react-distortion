{
  "name": "react-distortion",
  "version": "2.0.3",
  "description": "A React component library for adding animated procedural distortion to other components.",
  "scripts": {
    "build": "rimraf dist && pnpm rollup -c",
    "watch": "rimraf dist && pnpm rollup -c -w",
    "docs": "rimraf README.md && pnpm typedoc",
    "docs-watch": "rimraf README.md && pnpm typedoc --watch",
    "start": "ladle serve",
    "test": "jest",
    "test-types": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "distortion",
    "animation",
    "css",
    "procedural",
    "noise"
  ],
  "author": "Cass Bunting <cass@cbunt.ing>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cbunt/react-distortion"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/distort-component.cjs",
      "import": "./dist/distort-component.js",
      "types": "./dist/distort-component.d.ts"
    }
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "peerDependencies": {
    "@types/react": "^18 || ^19",
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.36.0",
    "@ladle/react": "^5.0.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@testing-library/react": "^16.3.0",
    "@types/css-modules": "^1.0.5",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "eslint": "^9.36.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.2",
    "rollup-plugin-dts": "^6.2.3",
    "ts-jest": "^29.4.4",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.13",
    "typedoc-plugin-dt-links": "^2.0.20",
    "typedoc-plugin-markdown": "^4.9.0",
    "typedoc-plugin-rename-defaults": "^0.7.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "8.44.1"
  }
}
