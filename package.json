{
  "name": "react-distortion",
  "version": "2.0.0",
  "description": "A React component library for adding animated procedural distortion to other components.",
  "scripts": {
    "build": "rimraf dist && pnpm rollup -c",
    "watch": "rimraf dist && pnpm rollup -c -w",
    "docs": "rimraf README.md && pnpm typedoc",
    "docs-watch": "rimraf README.md && pnpm typedoc --watch",
    "start": "ladle serve",
    "test": "jest",
    "test-types": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "distortion",
    "animation",
    "css",
    "procedural",
    "noise"
  ],
  "author": "Cass Bunting <cass@cbunt.ing>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cbunt/react-distortion"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/distort-component.cjs",
      "import": "./dist/distort-component.js",
      "types": "./dist/distort-component.d.ts"
    }
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "peerDependencies": {
    "@types/react": "^18.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@eslint/js": "^9.16.0",
    "@ladle/react": "^4.1.2",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@stylistic/eslint-plugin": "^2.11.0",
    "@testing-library/react": "^16.1.0",
    "@types/css-modules": "^1.0.5",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "eslint": "^9.16.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.13.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.28.1",
    "rollup-plugin-dts": "^6.1.1",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.1",
    "typedoc": "^0.27.3",
    "typedoc-plugin-dt-links": "^1.1.1",
    "typedoc-plugin-markdown": "^4.3.1",
    "typedoc-plugin-rename-defaults": "^0.7.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "8.17.1-alpha.5"
  }
}
